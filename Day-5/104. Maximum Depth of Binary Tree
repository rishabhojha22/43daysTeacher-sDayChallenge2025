class Solution {
    public int helper(TreeNode root){
        if(root==null)return 0;
        if(root.left==null && root.right==null)return 1;

        int l=helper(root.left);
        int r=helper(root.right);

        return 1+Math.max(l,r);
    }
    public int maxDepth(TreeNode root) {
        return helper(root);
    }
}
