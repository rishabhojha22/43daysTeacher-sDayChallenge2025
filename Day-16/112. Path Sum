class Solution {
    public boolean helper(TreeNode root,int tgt,int curr){
        if(root==null)return false;

        curr+=root.val;
        if(root.left==null && root.right==null && tgt==curr){
            return true;
        }
            
        boolean l=helper(root.left,tgt,curr);
        boolean r=helper(root.right,tgt,curr);

        return l || r;
    }
    public boolean hasPathSum(TreeNode root, int targetSum) {
        return helper(root,targetSum,0);
    }
}
