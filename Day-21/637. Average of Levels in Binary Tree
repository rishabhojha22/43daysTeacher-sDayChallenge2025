class Solution {
    public List<Double> averageOfLevels(TreeNode root) {
        List<Double>ans=new ArrayList<>();
        Queue<TreeNode>q=new LinkedList<>();
        q.add(root);

        while(!q.isEmpty()){
            double sum=0;
            int length=q.size();

            for(int i=0;i<length;i++){
                TreeNode temp=q.poll();
                sum+=temp.val;
                if(temp.left!=null){
                    q.add(temp.left);
                }
                if(temp.right!=null){
                    q.add(temp.right);
                }
            }

            sum/=length;
            ans.add(sum);
        }
        return ans;
    }
}
