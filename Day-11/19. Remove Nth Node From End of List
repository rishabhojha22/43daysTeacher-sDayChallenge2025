class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
        if(head==null || head.next==null)return null;
        int len=0;
        ListNode temp=head;

        while(temp!=null){
            len++;
            temp=temp.next;
        }

        len=len-n;
        if(len==0){
            return head.next;
        }
        
        temp=head;
        while(temp!=null){
            len--;
            if(len==0){
                temp.next=temp.next.next;
            }
            temp=temp.next;
        }

        return head;
    }
}
